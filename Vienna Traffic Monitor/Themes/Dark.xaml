<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <BitmapImage x:Key="IconMagnifyBitmap" UriSource="../Ressources/Icons/Dark/appbar.magnify.png" />
    <ImageBrush x:Key="IconMagnify" ImageSource="{StaticResource IconMagnifyBitmap}" Stretch="Uniform" />

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource IconMagnify}" />
    </Style>

    <Style TargetType="Window">
        <Setter Property="Background" Value="Black" />
    </Style>

</ResourceDictionary>